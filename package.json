{
  "name": "context-craft",
  "displayName": "context-craft",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.2"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contextCraftExplorer",
          "title": "My Explorer",
          "icon": "resources/my-icon.svg"
        }
      ]
    },
    "views": {
      "contextCraftExplorer": [
        {
          "id": "contextCraftFileBrowser",
          "name": "Context Craft"
        }
      ]
    },
    "commands": [
      {
        "command": "contextCraft.unselectAll",
        "title": "Unselect All",
        "icon": "$(circle-slash)"
      }
    ],
    "menus": {
      "view/item/context": [
        
      ],
      "view/title": [
        {
          "command": "contextCraft.unselectAll",
          "when": "view == contextCraftFileBrowser",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "extensionDependencies": ["vscode.git"]
}
