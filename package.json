{
  "name": "context-craft",
  "displayName": "Context Craft",
  "publisher": "airizom",
  "description": "Cherry pick workspace files and copy them as XML payloads for LLM prompts.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Airizom/context-craft.git"
  },
  "bugs": {
    "url": "https://github.com/Airizom/context-craft/issues"
  },
  "homepage": "https://github.com/Airizom/context-craft#readme",
  "license": "MIT",
  "keywords": [
    "llm",
    "prompt",
    "clipboard",
    "xml",
    "context",
    "gitignore"
  ],
  "version": "1.0.3",
  "engines": {
    "vscode": "^1.96.2"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:contextCraftFileBrowser",
    "onCommand:contextCraft.unselectAll",
    "onCommand:contextCraft.copySelected"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contextCraftExplorer",
          "title": "Context Craft",
          "icon": "resources/activity-bar-icon.png"
        }
      ]
    },
    "views": {
      "contextCraftExplorer": [
        {
          "id": "contextCraftFileBrowser",
          "name": "Context Craft"
        }
      ]
    },
    "commands": [
      {
        "command": "contextCraft.unselectAll",
        "title": "Unselect All",
        "icon": "$(circle-slash)"
      },
      {
        "command": "contextCraft.copySelected",
        "title": "Copy Selected",
        "icon": "$(copy)"
      }
    ],
    "menus": {
      "view/item/context": [
        
      ],
      "view/title": [
        {
          "command": "contextCraft.unselectAll",
          "when": "view == contextCraftFileBrowser",
          "group": "navigation"
        },
        {
          "command": "contextCraft.copySelected",
          "when": "view == contextCraftFileBrowser",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "ignore": "^5.3.0"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "extensionDependencies": ["vscode.git"]
}
